extends ./components/_layout.pug

block vars
  include ./config/_config.pug

  - var key = "content"
  - var page = {}

  if key !== "top"
    - page = pages[key]

block contents

  article(class="item parts-grid")
    figure(class="item-photo")
      img(src="~@img/item-ea201.jpg" alt="")

    div(class="grid12")
      div(class="item-body")
        h1 サボテンセット EA201
        p 個性豊かな4種類のサボテンをセットにしました。こぶりなサボテンたちなので、窓際やテーブルに置くのにぴったりです。季節ごとに花を咲かせたり、葉を厚くしたりと楽しませてくれます。
        ul
          li
            i(class="fas fa-tint fa-fw")
            h3 水やり
            p 土の表面が乾かない程度に。冬場は月に1回程度で大丈夫です。
          li
            i(class="fas fa-thermometer-half fa-fw")
            h3 温度
            p 5度以上をキープしてください。
          li
            i(class="fas fa-sun fa-fw")
            h3 日当たり
            p 適度に日当たりのよいところに置いてあげると◎です。

      form(class="item-order")
        p(class="price") 7,500円<span>（税込）</span>
        label(class="quantity") 数量
          select
            option(selected) 1
            option 2
            option 3
            option 4
            option 5
        button(class="btn" type='submit')
          i(class="fas fa-shopping-cart icon-cart")
          | カートに入れる

  section(class="list list-popular parts-grid")
    div(class="grid12 frame")
      h2 人気の植物
      ul(class="grid12 mobile-col-2 pc-col-2")
        li
          a(href="#")
            img(src="~@img/item-a101.jpg" alt="")
            h3 サボテン A101
            p ¥1,800
        li
          a(href="#")
            img(src="~@img/item-flower.jpg" alt="")
            h3 フラワーポット
            p ¥4,200









