{
  "env": {
    "browser": true,
    "es2017": true
  },
  "extends": [
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "root": true,
  "rules": {
    "semi": [ "error", "always" ]
  },
  "globals": {
    "utils": "readonly",
    "jQuery": "readonly",
    "$": "readonly"
  }
}
